<Window x:Class="spfgraph.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spfgraph.View"
        xmlns:converters="clr-namespace:spfgraph.Converters"
        xmlns:zoom="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"
        xmlns:viz="clr-namespace:spfgraph.Model.Vizualization"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="spfgraph" Height="540" Width="960"
        MinWidth="400" MinHeight="250" >

    <Window.Resources>
        <!--Converters-->
        <converters:NullRefToVisibilityConverter x:Key="NullRefToVisibilityConverter" />
        <converters:ColorToSolidBrushConverter x:Key="ColorToSolidBrush"/>
    </Window.Resources>

    <Border  BorderBrush="{StaticResource DarkGrayColorBrush}"
             BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
                <RowDefinition Height="22"/>
            </Grid.RowDefinitions>

            <!--Top dock panel-->
            <DockPanel Style="{StaticResource topBar}">
                <StackPanel Style="{StaticResource stackPanelForBar}">
                    <Menu Style="{StaticResource menuForBar}">
                        <MenuItem Width="55" Style="{StaticResource menuItemForBar}">
                            <MenuItem.Header>
                                <TextBlock Width="25" Text="File" HorizontalAlignment="Center"  Margin="7 0 0 0"/>
                            </MenuItem.Header>
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="Save"/>
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="Open" />
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="New" />
                        </MenuItem>
                        <MenuItem Style="{StaticResource menuItemForBar}" Header="Properties">
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="Item 1" />
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="Item 2" />
                            <MenuItem Style="{StaticResource menuItemForBar}" Header="Item 3" />
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </DockPanel>

            <!--Main page-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--Left side of the main page-->
                <Border Background="#ADD7F6" Padding="20 20 20 10">
                    <StackPanel>
                        <!--<TextBlock Text="Path" Margin="0 0 0 5"/>-->
                        <!--<TextBlock Grid.Column="0" Background="White" Text="{Binding FilePath, Mode=OneWay}" Margin="0 0 0 10" MaxWidth="300"/>-->
                        <Button Width="130" Height="30" Margin="0 0 0 10"
                                Style="{StaticResource CustomButton}"
                                Command="{Binding OpenCommand}" Content="Choose Path"/>

                        <Button Width="130" Height="30" Margin="0 0 0 10"
                                Style="{StaticResource CustomButton}"
                                Command="{Binding BuildGraphCommand}" Content="Build Graph"/>

                        <Button Width="130" Height="30" Margin="0 0 0 10" 
                                Style="{StaticResource CustomButton}"
                                Command="{Binding ClearDataCommand}" Content="Delete Graph"/>

                        <Button Width="130" Height="30" Margin="0 0 0 15" 
                                Style="{StaticResource CustomButton}"
                                Command="{Binding Path=GraphVM.ExportToJsonCommand}" Content="Json Export"/>

                        <Separator Margin="0 0 0 10" BorderBrush="Black"/>

                        <!--Graph Features Panel-->
                        <GroupBox Header="Graph Features" Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Heigth" />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Path=GraphVM.GraphHeight}" />

                                <TextBlock Grid.Row="1" Text="Width" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Path=GraphVM.GraphWidth}" />

                                <TextBlock Grid.Row="2" Text="Avrg Width" Margin="0 0 5 0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Path=GraphVM.GraphAvrgWidth}" />

                                <TextBlock Grid.Row="3" Text="Irregular" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding Path=GraphVM.GraphIrregular}" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Border>

                <!--Right side of the main page-->
                <Grid Grid.Column="1">
                    <Expander Panel.ZIndex="10"  VerticalAlignment="Top" HorizontalAlignment="Right" 
                               Margin="0 10 15 0" Header="Layout parameters" FontSize="14">
                        <StackPanel Background="#fff" UseLayoutRounding="True">
                            <GroupBox Header="Color Scheme" Margin="5" >
                                <StackPanel>
                                    <RadioButton Name="rbInDegree" Command="{Binding Path=SetColorSchemeFromRadioButton}"  
                                                 CommandParameter="{Binding ElementName=rbInDegree, Path=Content}" 
                                                 IsChecked="True" Content="In Degree" Margin="5 5 0 0" />
                                    
                                    <RadioButton Name="rbOutDegree" Command="{Binding Path=SetColorSchemeFromRadioButton}"
                                                 CommandParameter="{Binding ElementName=rbOutDegree, Path=Content}"
                                                 Content="Out Degree"  Margin="5 5 0 0" />
                                    
                                    <RadioButton Name="rbSumDegree" Command="{Binding Path=SetColorSchemeFromRadioButton}" 
                                                 CommandParameter="{Binding ElementName=rbSumDegree, Path=Content}"
                                                 Content="Sum Degree"  Margin="5 5 0 0" />
                                    
                                    <RadioButton Name="rbDefault" Command="{Binding Path=SetColorSchemeFromRadioButton}" 
                                                 CommandParameter="{Binding ElementName=rbDefault, Path=Content}"
                                                 Content="Default" Margin="5 5 0 0" />
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Optimize Layout" Margin="5">
                                <StackPanel>
                                    <RadioButton Name="rbMinimize" Command="{Binding Path=SetOptimizeLayotFromRadioButton}" 
                                                 CommandParameter="{Binding ElementName=rbMinimize, Path=Content}"
                                                 IsChecked="True" Content="Minimize Crosses" Margin="5 5 0 0"/>
                                    
                                    <RadioButton Name="rbDefault_1" Command="{Binding Path=SetOptimizeLayotFromRadioButton}" 
                                                 CommandParameter="{Binding ElementName=rbDefault_1, Path=Content}" 
                                                 Content="Default" Margin="5 5 0 0"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Colors" Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Start Color" />
                                    <Button Style="{StaticResource ColorButton}"
                                            Width="30" Height="30" Grid.Column="1" Margin="0 0 0 5"
                                            Background="{Binding StartColor,
                                            Converter={StaticResource ColorToSolidBrush}}"
                                            Command="{Binding SetStartColorCommand}"/>
                                    
                                    <TextBlock Text="End Color" Grid.Row="1"/>
                                    <Button Style="{StaticResource ColorButton}" 
                                            Width="30" Height="30" Grid.Column="2" Grid.Row="1"  Margin="0 0 0 5"
                                            Background="{Binding EndColor,
                                            Converter={StaticResource ColorToSolidBrush}}"
                                            Command="{Binding SetEndColorCommand}"/>
                                    
                                </Grid>
                            </GroupBox>
                            <Button Style="{StaticResource RefButton}" Content="Default Colors" 
                                    Command="{Binding SetDefaultColor}" />
                        </StackPanel>
                    </Expander>

                    <zoom:ZoomControl Mode="Original"
                                      Visibility="{Binding Path=GraphVM, Converter={StaticResource NullRefToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding Path=GraphVM.ElementsToViz}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding Path=GraphVM.CanvasWidth}"
                                            Height="{Binding Path=GraphVM.CanvasHeight}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.Resources>
                                <DataTemplate DataType="{x:Type viz:Node}">
                                    <Viewbox Width="40" Height="40">
                                        <Grid Width="40" Height="40">
                                            <Ellipse Stroke="{Binding Path=NodeColor,
                                                     Converter={StaticResource ColorToSolidBrush}}"
                                                     StrokeThickness="3" Fill="White" />
                                            
                                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Text="{Binding Value}" TextAlignment="Center" />
                                        </Grid>
                                        
                                        <Viewbox.RenderTransform>
                                            <TranslateTransform X="{Binding X}" Y="{Binding Y}" />
                                        </Viewbox.RenderTransform>
                                    </Viewbox>
                                </DataTemplate>

                                <DataTemplate DataType="{x:Type viz:Edge}">
                                    <Line X1="{Binding X1}" Y1="{Binding Y1}"
                                          X2="{Binding X2}" Y2="{Binding Y2}"
                                          Stroke="{Binding EdgeColor,
                                          Converter={StaticResource ColorToSolidBrush}}"
                                          StrokeThickness="3">
                                        
                                        <Line.RenderTransform>
                                            <TranslateTransform X="20" Y="20"/>
                                        </Line.RenderTransform>
                                    </Line>
                                </DataTemplate>
                            </ItemsControl.Resources>
                        </ItemsControl>
                    </zoom:ZoomControl>
                </Grid>
            </Grid>

            <!--Bottom dock panel-->
            <DockPanel Height="22" Grid.Row="2" Background="{StaticResource CleanBlueBrush}" >
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Path" Foreground="White" Margin="20 0 0 0" />
                    <TextBlock Text="{Binding Path=FilePath}" Foreground="White" Margin="5 0 0 0" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>
