<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:grsh="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls"
        xmlns:zoom="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"
        mc:Ignorable="d"
        x:Name="AppWindow"
        WindowStartupLocation="CenterScreen"
        Title="spfgraph" Height="540" Width="960"
        MinWidth="400" MinHeight="250"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <!--Top dock panel-->
        <DockPanel Grid.Row="0" Style="{StaticResource ResourceKey=topBar}">
            <StackPanel Style="{StaticResource ResourceKey=stackPanelForBar}">
                <Menu Style="{StaticResource ResourceKey=menuForBar}">
                    <MenuItem Width="55" Style="{StaticResource ResourceKey=menuItemForBar}">
                        <MenuItem.Header>
                            <TextBlock Width="25" Text="File" HorizontalAlignment="Center"  Margin="7 0 0 0"/>
                        </MenuItem.Header>
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Save"/>
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Open" />
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="New" />
                    </MenuItem>
                    <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Properties">
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Item 1" />
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Item 2" />
                        <MenuItem Style="{StaticResource ResourceKey=menuItemForBar}" Header="Item 3" />
                    </MenuItem>
                </Menu>
            </StackPanel>
        </DockPanel>

        <!--Main page-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--Left side of the main page-->
            <Border Background="#ADD7F6" Padding="15 10 15 10">
                <StackPanel >
                    <TextBlock Text="Path" Margin="0 0 0 5"/>
                    <TextBlock Grid.Column="0" Background="White" Text="{Binding FilePath, Mode=OneWay}" Margin="0 0 0 10"/>
                    <Button Grid.Column="1" Command="{Binding OpenCommand}"  Content="Change Path" Width="120" Height="30" Margin="0 0 0 10" />
                    <Button Content="Build Graph" Command="{Binding BuildGraphCommand}" Width="120" Height="30" Margin="0 0 0 10"/>
                </StackPanel>
            </Border>

            <!--Right side of the main page-->
            <Border Grid.Column="1" Background="White">
                <zoom:ZoomControl MinZoom="1" MaxZoom="3">
                    <grsh:GraphLayout
                    Graph="{Binding GraphToShow}"
                    LayoutAlgorithmType="Tree"
                    />
                </zoom:ZoomControl>
            </Border>
        </Grid>

        <!--Bottom dock panel-->
        <DockPanel Height="22" Grid.Row="2" Background="{StaticResource CleanBlueBrush}" >
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Background="{StaticResource CleanBlueBrush}" Foreground="White" Text="Status" Margin="15 0 0 0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
